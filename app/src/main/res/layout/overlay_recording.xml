<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_overlay_capturing"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="4dp"
    android:paddingRight="16dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/textTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.luckywarepro.musicintervals2anki.ui.RecordingButton
            android:id="@+id/actionRecord"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/selector_recording_control" />

        <Button
            android:id="@+id/actionClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn"
            android:text="@string/close"
            android:textColor="#ffffffff" />

    </LinearLayout>

    <TextView
        android:id="@+id/textBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textLatest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layoutLatestActions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.luckywarepro.musicintervals2anki.ui.PlaybackButton
            android:id="@+id/actionPlayLatest"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/selector_playback_control" />

        <Button
            android:id="@+id/actionDiscardLatest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn"
            android:text="@string/discard"
            android:textColor="#ffffffff" />
    </LinearLayout>
</LinearLayout>